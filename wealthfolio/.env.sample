# Wealthfolio Environment Variables
# https://github.com/afadil/wealthfolio
#
# Copy this file to .env and fill in the required values.
# Generate a 32-byte secret key for WF_SECRET_KEY using: openssl rand -base64 32

# Project Configuration
COMPOSE_PROJECT_NAME=wealthfolio

# Service Versions (optional - defaults to latest)
# https://hub.docker.com/r/afadil/wealthfolio/tags
WEALTHFOLIO_VERSION=latest

# Wealthfolio Configuration
WEALTHFOLIO_PORT=8088

# Volume Paths (optional - defaults to ./.volume)
WEALTHFOLIO_VOLUME_PATH=./.volume

# Required: 32-byte secret key for encryption and JWT signing
# Generate with: openssl rand -base64 32
WF_SECRET_KEY=<INSERT_32_BYTE_SECRET_KEY>

# Optional: Enable password authentication
# Generate Argon2id hash with: echo -n 'yourpasswordhere' | argon2 "somesalt16bytes" -id -t 3 -m 16 -p 4 -l 32 -e
# Copy the full output starting with '$argon2id$...'
# Use single quotes to prevent shell interpolation of special characters
WF_AUTH_PASSWORD_HASH='<INSERT_ARGON2_PASSWORD_HASH>'

# Optional: JWT token expiry in minutes (default: 60)
WF_AUTH_TOKEN_TTL_MINUTES=60

# Watchtower Auto-Update (optional)
WATCHTOWER_UPDATE_ENABLE=false