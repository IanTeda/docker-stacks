# Ghostfolio Environment Variables
# https://github.com/ghostfolio/ghostfolio
#
# Copy this file to .env and fill in the required values.
# Generate random strings for ACCESS_TOKEN_SALT and JWT_SECRET_KEY.

# Project Configuration
COMPOSE_PROJECT_NAME=ghostfolio

# Service Versions (optional - defaults to latest)
GHOSTFOLIO_VERSION=latest
POSTGRES_VERSION=latest
REDIS_VERSION=latest

# Ghostfolio Configuration
GHOSTFOLIO_PORT=3333
ACCESS_TOKEN_SALT=<INSERT_RANDOM_STRING>
JWT_SECRET_KEY=<INSERT_RANDOM_STRING>

# Volume Paths (optional - defaults to ./.volume)
GHOSTFOLIO_VOLUME_PATH=./.volume

# PostgreSQL Configuration
POSTGRES_DB=ghostfolio-db
POSTGRES_USER=user
POSTGRES_PASSWORD=<INSERT_POSTGRES_PASSWORD>

# Redis Configuration
REDIS_PASSWORD=<INSERT_REDIS_PASSWORD>

# Database URL (constructed from PostgreSQL settings)
DATABASE_URL=postgresql://user:<INSERT_POSTGRES_PASSWORD>@postgres:5432/ghostfolio-db?connect_timeout=300&sslmode=prefer

# Watchtower Auto-Update (optional)
WATCHTOWER_UPDATE_ENABLE=false
